{
  "name": "bluestart",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write .",
    "typecheck": "turbo run typecheck",
    "db:push": "pnpm --filter @bluestart/database run db:push",
    "db:studio": "pnpm --filter @bluestart/database run db:studio"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "turbo": "^2.5.5"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "better-sqlite3"
    ]
  }
}
